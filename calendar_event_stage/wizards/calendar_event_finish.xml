<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="calendar_event_finish_view_form" model="ir.ui.view">
        <field name="name">calendar.event.finish.view.form</field>
        <field name="model">calendar.event.finish</field>
        <field name="arch" type="xml">
            <form>
                <p><b>
                    Once open calendar events are confirmed, you will not be able
                    to modify them.
                    Do you want to close this event?
                    </b>
                </p>
                <footer>
                    <button name="action_finish_calendar_event" string="Finish" type="object"
                            default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>