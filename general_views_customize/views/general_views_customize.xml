<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="br_base.trust_menu_secondary"
              inherit_id="web.menu_secondary">
    </template>

    <template id="login_layout_remove_odoo" inherit_id="web.login_layout">
        <xpath expr="//div[@class='col-md-6 col-md-offset-3 o_database_list']/div[@t-if='not disable_footer']"
            position="replace">
        </xpath>
    </template>

    <template id="web_multi_layout" inherit_id="web.layout" name="Web multi layout">
        <xpath expr="//title" position="replace">
            <title t-esc="title or 'ERP@VMulti'"/>
        </xpath>
    </template>

    <record id="multi_view_sale_config_settings" model="ir.ui.view">
        <field name="name">crm settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="crm.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_account_batch_deposit']" position="replace"/>
            <xpath expr="//label[@for='module_account_batch_deposit']" position="replace"/>
            <xpath expr="//field[@name='module_website_sign']" position="replace"/>
            <xpath expr="//label[@for='module_website_sign']" position="replace"/>
            <xpath expr="//a" position="replace"/>
        </field>
    </record>

</odoo>
