<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="br_base.trust_menu_secondary"
              inherit_id="web.menu_secondary">
    </template>

    <template id="login_layout_remove_odoo" inherit_id="web.login_layout">
        <xpath expr="//div[@class='col-md-6 col-md-offset-3 o_database_list']/div[@t-if='not disable_footer']"
            position="replace">
        </xpath>
    </template>

    <template id="web_multi_layout" inherit_id="web.layout" name="Web multi layout">
        <xpath expr="//title" position="replace">
            <title t-esc="title or 'ERP@VMulti'"/>
        </xpath>
    </template>

    <record id="multi_view_sale_config_settings" model="ir.ui.view">
        <field name="name">crm settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="crm.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_account_batch_deposit']" position="replace"/>
            <xpath expr="//label[@for='module_account_batch_deposit']" position="replace"/>
            <xpath expr="//field[@name='module_website_sign']" position="replace"/>
            <xpath expr="//label[@for='module_website_sign']" position="replace"/>
            <xpath expr="//a" position="replace"/>
        </field>
    </record>

    <record model="ir.ui.view" id="multi_view_task_form2_inherited">
        <field name="name">project.task.form.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
        <field name="groups_id" eval="[(4, ref('base.group_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='progress']" position="replace">
                <field name="progress" widget="progressbar" string="Progresso da tarefa"/>
            </xpath>
        </field>
    </record>

    <record id="multi_view_sale_config_settings" model="ir.ui.view">
        <field name="name">multi crm settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="crm.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_website_sign']" position="replace"/>
            <xpath expr="//label[@for='module_website_sign']" position="replace"/>
            <xpath expr="//a" position="replace"/>
        </field>
    </record>

    <record id="multi_view_config_settings_form_inherit_hr_timesheet_sheet" model="ir.ui.view">
        <field name="name">multi.project.config.settings.form.inherit.timesheet.sheet</field>
        <field name="model">project.config.settings</field>
        <field name="inherit_id" ref="hr_timesheet_sheet.view_config_settings_form_inherit_hr_timesheet_sheet"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_project_timesheet_synchro']" position="replace"/>
            <xpath expr="//label[@for='module_project_timesheet_synchro']" position="replace"/>
            <xpath expr="//a" position="replace"/>
        </field>
    </record>

    <record id="multi_view_sale_config_settings" model="ir.ui.view">
        <field name="name">crm settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="crm.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_crm_voip']" position="replace"/>
            <xpath expr="//group[@name='config_alias']/label[@for='module_crm_voip']" position="replace"/>
            <xpath expr="//a" position="replace"/>
        </field>
    </record>

</odoo>
