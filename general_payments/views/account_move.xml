<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_move_line_form" model="ir.ui.view">
        <field name="name">account.move.line.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="br_account_payment.view_move_line_form"/>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="before">
                <field name="title_status" invisible="1"/>
                <div class="payment_status_box">
                    <span class="to_expire" attrs="{'invisible': [('title_status', '!=', 'to_expire')]}">
                        To Expire</span>

                    <span class="expired" attrs="{'invisible': [('title_status', '!=', 'expired')]}">
                        Expired</span>

                    <span class="received_or_payed" attrs="{'invisible': [('title_status', '!=', 'received')]}">
                        Received</span>

                    <span class="received_or_payed" attrs="{'invisible': [('title_status', '!=', 'payed')]}">
                        Payed</span>
                </div>
            </xpath>
        </field>
    </record>
</odoo>