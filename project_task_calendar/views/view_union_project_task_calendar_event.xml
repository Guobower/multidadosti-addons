<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_union_project_task_calendar_event_tree"
            model="ir.ui.view">
        <field name="name">union.project.task.calendar.event.tree</field>
        <field name="model">union.project.task.calendar.event</field>
        <field name="arch" type="xml">
            <tree string="Calendar" edit="false" create="false" delete="false">
                <field name="name"/>
                <field name="origin"/>
                <field name="project_id"/>
                <field name="start_date" string="Começa em"/>
                <field name="stop_date" string="Termina em"/>
                <field name="start_datetime" string="Começa em"/>
                <field name="stop_datetime" string="Termina em"/>
                <field name="allday" string="Dia todo"/>
            </tree>
        </field>
    </record>

    <record id="view_union_project_task_calendar_event_form_popup"
            model="ir.ui.view">
        <field name="name">union.project.task.calendar.event.form.popup</field>
        <field name="model">union.project.task.calendar.event</field>
        <field name="arch" type="xml">
            <form edit="0" create="0" delete="0">
                <field name="start" invisible="1"/>
                <field name="stop" invisible="1"/>
                <group>
                    <group>
                        <field name="origin" string="Origem"/>
                        <field name="project_task_id"
                               string="Tarefa"
                               attrs="{'invisible': [('project_task_id','=',False)]}"/>
                        <field name="calendar_event_id"
                               string="Evento de Calendário"
                               attrs="{'invisible': [('calendar_event_id','=',False)]}"/>
                        <field name="project_id" string="Projeto"/>
                    </group>
                    <group>
                        <field name="start_date" string="Começa em"
                               attrs="{'invisible': [('allday','=',False)]}"/>

                        <field name="stop_date" string="Termina em"
                               attrs="{'invisible': [('allday','=',False)]}"/>

                        <field name="start_datetime" string="Começa em"
                               attrs="{'invisible': [('allday','=',True)]}"/>

                        <field name="stop_datetime" string="Termina em"
                               attrs="{'invisible': [('allday','=',True)]}"/>

                        <field name="duration" widget="float_time"
                                   string="Duração (hrs)" class="oe_inline"/>

                        <field name="allday" string="Dia todo"/>

                        <field name="user_id"/>


                    </group>
                </group>

            </form>
        </field>
    </record>

    <record id="view_union_project_task_calendar_event_calendar"
            model="ir.ui.view">
        <field name="name">union.project.task.calendar.event.calendar</field>
        <field name="model">union.project.task.calendar.event</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar color="user_id" date_start="start" date_stop="stop"
                      display="[name]" date_delay="duration" all_day="allday"
                      string="Tasks" quick_add="false" avatar_model="res.users"
                      event_open_popup="%(project_task_calendar.view_union_project_task_calendar_event_form_popup)s">
                <field name="name"/>
                <field name="user_id"/>
            </calendar>
        </field>
    </record>

    <record id="action_union_project_task_calendar_event"
            model="ir.actions.act_window">
        <field name="name">Calendário Geral</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">union.project.task.calendar.event</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

</odoo>
