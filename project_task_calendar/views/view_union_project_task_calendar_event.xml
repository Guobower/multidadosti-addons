<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_union_project_task_calendar_event_tree"
            model="ir.ui.view">
        <field name="name">union.project.task.calendar.event.tree</field>
        <field name="model">union.project.task.calendar.event</field>
        <field name="arch" type="xml">
            <tree string="Calendar" edit="false" create="false" delete="false">
                <field name="name"/>
                <field name="origin"/>
                <field name="project_id"/>
                <field name="start_date"/>
                <field name="stop_date"/>
                <field name="start_datetime"/>
                <field name="stop_datetime"/>
                <field name="allday"/>
            </tree>
        </field>
    </record>

    <record id="view_union_project_task_calendar_event_form_popup"
            model="ir.ui.view">
        <field name="name">union.project.task.calendar.event.form.popup</field>
        <field name="model">union.project.task.calendar.event</field>
        <field name="arch" type="xml">
            <form edit="0" create="0" delete="0">
                <field name="start" invisible="1"/>
                <field name="stop" invisible="1"/>
                <group>
                    <group>
                        <field name="origin"/>
                        <field name="project_task_id" attrs="{'invisible': [('project_task_id','=',False)]}"/>
                        <field name="calendar_event_id" attrs="{'invisible': [('calendar_event_id','=',False)]}"/>
                        <field name="project_id"/>
                    </group>
                    <group>
                        <field name="start_date" attrs="{'invisible': [('allday','=',False)]}"/>
                        <field name="stop_date" attrs="{'invisible': [('allday','=',False)]}"/>
                        <field name="start_datetime" attrs="{'invisible': [('allday','=',True)]}"/>
                        <field name="stop_datetime" attrs="{'invisible': [('allday','=',True)]}"/>
                        <field name="duration" widget="float_time" class="oe_inline"/>
                        <field name="allday"/>
                        <field name="user_id"/>
                    </group>
                </group>

            </form>
        </field>
    </record>

    <record id="view_union_project_task_calendar_event_calendar"
            model="ir.ui.view">
        <field name="name">union.project.task.calendar.event.calendar</field>
        <field name="model">union.project.task.calendar.event</field>
        <field eval="2" name="priority"/>
        <field name="arch" type="xml">
            <calendar color="user_id" date_start="start" date_stop="stop"
                      display="[name]" date_delay="duration" all_day="allday"
                      string="Tasks" avatar_model="res.users" mode="week"
                      event_open_popup="%(project_task_calendar.view_union_project_task_calendar_event_form_popup)s">
                <field name="name"/>
                <field name="user_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_union_project_task_calendar_event_search" model="ir.ui.view">
        <field name="name">union.project.task.calendar.event.search</field>
        <field name="model">union.project.task.calendar.event</field>
        <field name="arch" type="xml">
            <search string="Search Meetings">
                <field name="name" string="Meeting" filter_domain="[('name','ilike',self)]"/>
                <field name="user_id"/>
                <filter string="My Events" domain="[('user_id','=',uid)]" help="My Events"/>
                <filter string="My Meetings" help="My Meetings" name="mymeetings" context='{"mymeetings": 1}'/>
                <separator/>
                <group expand="0" string="Others">
                    <filter string="Responsible" domain="[]" context="{'group_by':'user_id'}"/>
                    <filter string="Origin" domain="[]" context="{'group_by':'origin'}"/>
                    <filter string="Project Task" domain="[]" context="{'group_by':'project_task_id'}"/>
                    <filter string="Calendar Event" domain="[]" context="{'group_by':'calendar_event_id'}"/>
                    <filter string="Project" domain="[]" context="{'group_by':'project_id'}"/>
                </group>
                <newline/>
                    <!--<group expand="0" string="Extended Filters..." colspan="4" col="8">-->
                        <!--<field name="date_start" />-->
                        <!--<field name="duration" />-->
                    <!--</group>-->

                    <group expand="0" string="Period">
                        <filter string="Current week"
                                name="current_week"
                                domain="[('start','&lt;=', (context_today() + relativedelta(weeks=0, weekday=6)).strftime('%%Y-%%m-%%d')),
                                ('start','&gt;',(context_today() - relativedelta(weeks=1, weekday=6)).strftime('%%Y-%%m-%%d'))]"
                                help="Display all elements in the current week." />
                        <filter string="Current month"
                                name="current_month"
                                domain="[('start','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')),
                                ('start','&gt;=',time.strftime('%%Y-%%m-01'))]"
                                help="Display all elements in the current month." />
                        <filter string="Next week"
                                name="next_week"
                                domain="[('start','&gt;',(context_today()+relativedelta(weeks=0, weekday=6)).strftime('%%Y-%%m-%%d')),
                                ('start','&lt;=',(context_today()+relativedelta(weeks=1, weekday=6)).strftime('%%Y-%%m-%%d'))]"
                                help="Display all elements in the next week." />
                        <filter string="Next month"
                                name="next_month"
                                domain="[('start','&gt;=',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')),
                                ('start','&lt;',(context_today()+relativedelta(months=2)).strftime('%%Y-%%m-01'))]"
                                help="Display all elements in the next month." />
                    </group>
                    <group expand="1" string="Group By">
                        <filter string="Day"
                                name="group_day"
                                context="{'group_by':'start:day'}"
                                help="Group all elements in the same day."/>
                        <filter string="Week"
                                name="group_week"
                                context="{'group_by':'start:week'}"
                                help="Group all elements in the same week."/>
                        <filter string="Month"
                                name="group_month"
                                context="{'group_by':'start:month'}"
                                help="Group all elements in the same month."/>
                        <filter string="Quarter"
                                name="group_quarter"
                                context="{'group_by':'start:quarter'}"
                                help="Group all elements in the same quarter."/>
                        <filter string="Year"
                                name="group_year"
                                context="{'group_by':'start:year'}"
                                help="Group all elements in the same year."/>
                     </group>
            </search>
        </field>
    </record>

    <record id="action_union_project_task_calendar_event"
            model="ir.actions.act_window">
        <field name="name">General Calendar</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">union.project.task.calendar.event</field>
        <field name="view_mode">calendar,tree,form</field>
    </record>

</odoo>
