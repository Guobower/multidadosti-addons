<odoo>
    <record id="view_multi_calendar_event_tree" model="ir.ui.view">
        <field name="name">calendar.event.tree</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="after">
                <field name="project_id"/>
                <field name="task_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_multi_calendar_event_form" model="ir.ui.view">
        <field name="name">multi.calendar.event</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='partner_ids']" position="before">
                <h2>
                    <label for="partner_id" string="Partner"
                           class="oe_edit_only"/>
                    <field name="partner_id"
                           domain="[('is_company','=',True)]"/>
                </h2>
            </xpath>

            <xpath expr="//sheet" position="before">
                <header>
                    <button name="done_button" string='Done' type="object"
                            class="btn-primary"
                            widget="button_confirm"
                            attrs="{'invisible': [('meeting_state','!=','open')]}"/>
                    <button name="cancel_button" string='Cancel' type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('meeting_state','!=','open')]}"/>
                    <button name="open_button" string='Open' type="object"
                            class="btn-primary"
                            attrs="{'invisible': [('meeting_state','=','open')]}"/>
                    <field name="meeting_state" widget="statusbar"
                           statusbar_visible="open,done,cancel"/>
                </header>
            </xpath>

            <xpath expr="//field[@name='partner_ids']" position="attributes">
                <attribute name="domain">
                    [('is_company','=',False),('parent_id','=',partner_id)]
                </attribute>
            </xpath>


            <xpath expr="//field[@name='user_id']" position="after">
                <field name="meeting_feedback"
                       string="Feedback"
                       attrs="{'invisible': [('meeting_state','!=','done')]}"/>
                <field name="meeting_duration"
                       widget="float_time"
                       string="Duration"
                       attrs="{'invisible': [('meeting_state','!=','done')]}"/>
            </xpath>

            <xpath expr="//notebook" position="inside">
                <page string="Projeto">
                    <group>
                        <field name="project_id"
                               domain="[('partner_ids', '=', partner_id)]"/>
                        <!--domain="[('partner_id', 'in', partner_ids and partner_ids[0][2])]"/>-->
                        <field name="task_id"
                               domain="[('project_id', '=', project_id)]"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="wizard_calendar_event_form" model="ir.ui.view">
        <field name="name">wizard.calendar.event.form</field>
        <field name="model">wizard.calendar.event</field>
        <!--<field name="inherit_id" ref="calendar.view_calendar_event_form"/>-->
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <!--<field name="time" string="Time"/>-->
                    <group>
                        <field name="meeting_feedback"
                               class="oe_inline"/>
                    </group>
                        <div class="oe_title">
                            <div class="oe_edit_only">
                                <label for="meeting_duration"/>
                            </div>
                            <field name="meeting_duration" widget="float_time"
                                   class="oe_inline"/>
                            <span>hours</span>
                        </div>
                </sheet>
                <footer>
                    <button name="finish" string="Finish" type="object"
                            default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>