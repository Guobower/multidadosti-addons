<odoo>
    <record id="view_multi_calendar_event_tree" model="ir.ui.view">
        <field name="name">calendar.event.tree</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="after">
                <field name="project_id"/>
                <field name="task_id"/>
            </xpath>
        </field>
    </record>
    <record id="view_multi_calendar_event_form" model="ir.ui.view">
        <field name="name">multi.calendar.event</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//label[@for='partner_ids']" position="before"><h2>
                <label for="partner_id" string="Partner" class="oe_edit_only"/>
                <field name="partner_id" domain="[('is_company','=',True)]"/></h2>
            </xpath>

             <xpath expr="//label[@for='name']" position="before">
                 <label for="state" class="oe_edit_only"/>
                    <group>
                        <field name="state" widget="statusbar"/>
                    </group>
            </xpath>

          <xpath expr="//field[@name='partner_ids']" position="attributes">
                <attribute name="domain">[('is_company','=',False),('parent_id','=',partner_id)]</attribute>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Projeto">
                    <group>
                            <field name="project_id"
                                   domain="[('partner_id', '=', partner_id)]"/>
                                   <!--domain="[('partner_id', 'in', partner_ids and partner_ids[0][2])]"/>-->
                            <field name="task_id"
                                   domain="[('project_id', '=', project_id)]"/>
                        </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>