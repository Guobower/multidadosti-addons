<odoo>
    <record id="view_multi_calendar_event_tree" model="ir.ui.view">
        <field name="name">calendar.event.tree</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ids']" position="after">
                <field name="project_id"/>
                <field name="task_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_multi_calendar_event_form" model="ir.ui.view">
        <field name="name">multi.calendar.event</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Projeto">
                    <group col="12">
                        <group colspan="4">
                            <field name="project_id"
                                   domain="[('partner_id', 'in', partner_ids and partner_ids[0][2])]"/>
                            <field name="task_id"
                                   domain="[('project_id', '=', project_id)]"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record id="multi_task_type_edit" model="ir.ui.view">
        <field name="name">multi.project.task.type.form</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_edit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="is_default"/>
            </xpath>
        </field>
    </record>

    <record id="multi_task_type_tree" model="ir.ui.view">
        <field name="name">project.task.type.tree</field>
        <field name="model">project.task.type</field>
        <field name="inherit_id" ref="project.task_type_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='fold']" position="after">
                <field name="is_default"/>
            </xpath>
        </field>
    </record>

    <record id="multi_project_project_view_form_simplified" model="ir.ui.view">
        <field name="name">multi_project_project_view_form_simplified</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='use_tasks']" position="before">
                <field name="bring_default_task_type"/>
            </xpath>
        </field>
    </record>

    <record id="project.action_view_task" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">project.task</field>
        <field name="view_mode">kanban,tree,form,calendar,pivot,graph</field>
        <field name="context">{'search_default_Stage': 1}</field>
        <field name="search_view_id" ref="project.view_task_search_form"/>
        <field name="help" type="html">
            <p>
                Odoo's project management allows you to manage the pipeline of your tasks efficiently. You can track progress, discuss on tasks, attach documents, etc.
            </p>
        </field>
    </record>

    <record id="multi_view_config_settings" model="ir.ui.view">
        <field name="name">multi project settings</field>
        <field name="model">project.config.settings</field>
        <field name="inherit_id" ref="project.view_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_project_forecast']" position="replace"/>
            <xpath expr="//label[@for='module_project_forecast']" position="replace"/>
            <xpath expr="//a" position="replace"/>
        </field>
    </record>

</odoo>