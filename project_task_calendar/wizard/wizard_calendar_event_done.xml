<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="wizard_calendar_event_form" model="ir.ui.view">
        <field name="name">wizard.calendar.event.form</field>
        <field name="model">wizard.calendar.event</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="meeting_feedback"/>
                    </group>
                    <div class="oe_title">
                        <div class="oe_edit_only">
                            <label for="meeting_duration"/>
                        </div>
                        <field name="meeting_duration" widget="float_time"
                               class="oe_inline"/>
                        <span>hours</span>
                    </div>
                </sheet>
                <footer>
                    <button name="finish" string="Finish" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>