<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="general_calendar_line_tree">
        <field name="name">general.calendar.line.tree</field>
        <field name="model">general.calendar.line</field>
        <field name="arch" type="xml">
            <tree string="Configurators">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="general_calendar_line_form">
        <field name="name">general.calendar.line.form</field>
        <field name="model">general.calendar.line</field>
        <field name="arch" type="xml">
            <form string="Configurator">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="domain"/>
                            <field name="user_field_id"/>
                        </group>
                        <group>
                            <field name="all_day_field_id"/>
                            <field name="date_start_field_id"/>
                            <field name="duration_field_id"/>
                            <field name="date_stop_field_id"
                                   attrs="{'readonly':[('duration_field_id','!=',False)], 'visible': [('duration_field_id','!=',False)]}"/>
                        </group>
                    </group>
                    <group string="Description">
                        <field name="description_type"/>
                        <newline/>
                        <field name="description_field_id"
                               attrs="{'required':[('description_type','!=','code')], 'invisible':[('description_type','==','code')]}"/>
                        <group colspan="4" col="1"
                               attrs="{'invisible':[('description_type','!=','code')]}">
                            <label string="Use '${o}' to refer to the involved object. E.g.: '${o.project_id.name}'"/>
                            <field name="description_code" nolabel="1"
                                   attrs="{'required':[('description_type','==','code')]}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- This Menu Item must have a parent and an action -->
    <record id="action_general_calendar_line" model="ir.actions.act_window">
        <field name="name">General Calendar Line</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">general.calendar.line</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="general_calendar_configuration_menu" name="Configuration" sequence="2"
              parent="general_calendar_root"/>

    <menuitem id="general_calendar_line_menu" name="General Calendar Line"
              sequence="2"
              parent="general_calendar_configuration_menu"
              action="action_general_calendar_line"/>
</odoo>
