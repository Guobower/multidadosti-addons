<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_project_kanban" model="ir.ui.view">
        <field name="name">project.project.counting.meeting</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project_kanban"/>
        <field name="priority">24</field>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'o_project_kanban_box')]/div[last()]"
                   position="before">
                <field name="allow_meetings" invisible="1"/>
                <field name="event_number" invisible="1"/>
                <div attrs="{'invisible': [('allow_meetings', '=', False)]}"
                     class="o_project_kanban_box">
                    <a name="%(act_calendar_event_meetings_line_by_project)d"
                       type="action">
                        <span class="o_value">
                            <t t-esc="record.event_number.value"/>
                        </span>
                    </a>
                    <a t-if="record.allow_meetings.raw_value"
                       name="%(act_calendar_event_meetings_line_by_project)d"
                       type="action">
                        <span class="o_label">Meetings</span>
                    </a>
                </div>
            </xpath>
        </field>
    </record>

</odoo>