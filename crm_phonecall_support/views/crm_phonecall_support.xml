<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_phonecall_service_tree" model="ir.ui.view">
        <field name="name">phonecall.service.tree</field>
        <field name="model">phonecall.service</field>
        <field name="arch" type="xml">
            <tree string="phonecall" editable="top">
                <field name="start_date_hour"/>
                <field name="name"/>
                <field name="partner_id" domain="[('is_company','=',True)]"
                widget="selection"/>
                <field name="project_id" domain ="[('partner_id','=',partner_id)]"
                widget="selection"/>
                <field name="contact_partner_id" domain="[('is_company','=',False),('parent_id','=',partner_id)]"
                widget="selection"/>
                <field name="user_id"/>
                <field name="finish_date_hour"/>
            </tree>
        </field>
    </record>

    <record id="action_phonecall_service" model="ir.actions.act_window">
        <field name="name">PhoneCall Service</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">phonecall.service</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menuitem_phonecall_service"
              name="CRM PhoneCall"
              action="action_phonecall_service"
              sequence="10"
    />
</odoo>
