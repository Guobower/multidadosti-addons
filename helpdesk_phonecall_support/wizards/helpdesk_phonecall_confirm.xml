<?xml version="1.0" encoding="UTF-8"?>
<odoo>

     <record id="helpdesk_phonecall_service_confirm" model="ir.ui.view">
        <field name="name">helpdesk.phonecall.confirm.view.form</field>
        <field name="model">helpdesk.phonecall.confirm</field>
        <field name="arch" type="xml">
            <form string="Confirm Draft PhoneCalls">
                <p>
                    Once open phonecalls are confirmed, you will not be able
                    to modify them.
                    Do you want to close this phonecall?
                </p>
                <footer>
                    <button string="Close Phonecall"
                            name="action_confirm_finish_phonecall"
                            type="object" default_focus="1"
                            class="btn-primary"/>
                    <button string="Cancel" class="btn-default"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>