<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="multi_crm_case_form_view_oppor" model="ir.ui.view">
        <field name="name">multi.crm.lead.oppor.inherited.crm.sale</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="sale_crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[not(@attrs)]" position="attributes">
                <attribute name="attrs">{'invisible': [('send_quotation','!=',True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="send_quotation"/>
            </xpath>
        </field>
    </record>

    <record id="multi_crm_stage_form" model="ir.ui.view">
        <field name="name">multi.crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="priority" eval="1"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='on_change']" position="before">
                <field name="allow_quotation"/>
            </xpath>
        </field>
    </record>
    
    <record id="multi_view_sale_config_settings" model="ir.ui.view">
        <field name="name">multi crm settings</field>
        <field name="model">sale.config.settings</field>
        <field name="inherit_id" ref="crm.view_sale_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='module_crm_voip']" position="replace"/>
            <xpath expr="//group[@name='config_alias']/label[@for='module_crm_voip']" position="replace"/>
            <xpath expr="//group[@name='config_sign']" position="replace"/>
            <xpath expr="//a" position="replace"/>
        </field>
    </record>

</odoo>
